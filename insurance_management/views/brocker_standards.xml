<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!--************ CLASS NAME STANDARD VIEWS  ************-->
    <record id="class_name_standard_view_tree" model="ir.ui.view">
        <field name="name">class.name.standard.tree</field>
        <field name="model">class.name.standard</field>
        <field name="arch" type="xml">
            <tree string="Medical Class Name standard" editable="bottom">
                <field name="name"/>
                <field name="standard_type" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
            </tree>
        </field>
    </record>

    <record id="class_name_standard_view_form" model="ir.ui.view">
        <field name="name">class.name.standard.form</field>
        <field name="model">class.name.standard</field>
        <field name="arch" type="xml">
            <form string="Medical Class Name standard">
                 <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="standard_type" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                        </group>
                         <group>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_class_name_standard" model="ir.actions.act_window">
        <field name="name">Medical Class Name Standard</field>
        <field name="res_model">class.name.standard</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="class_name_standard_view_tree"/>
         <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new  Medical Class Name standard.
            </p>
        </field>
    </record>


