<odoo>
     <record id="view_account_move_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
              <xpath expr="//header" position="inside">
                  <button name="acton_calculate_commission" type="object" string="Calculate Commission" class="oe_highlight" attrs="{'invisible':[('invoice_type','!=','policy')]}"/>

              </xpath>
              <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                  <button attrs="{'invisible':[('invoice_type','!=','policy')]}"  name="action_open_invoice" type="object"
                            class="oe_stat_button" icon="fa-pencil-square-o" >
                            <div class="o_stat_info">
                                <field name="commission_count" class="o_stat_value"/>
                                <span class="o_stat_text">Commission</span>
                            </div>
                  </button>

                   <button attrs="{'invisible':[('invoice_type','!=','policy')]}"  name="action_open_govt_fee" type="object"
                            class="oe_stat_button" icon="fa-pencil-square-o" >
                            <div class="o_stat_info">
                                <field name="govt_fee_count" class="o_stat_value"/>
                                <span class="o_stat_text">Govt. Fee</span>
                            </div>
                  </button>
              </xpath>
              <xpath expr="//field[@name='payment_reference']" position="after">
                  <field name="insurance_company_id"/>
                  <field name="endorsment_ref" attrs="{'invisible':['|',('move_type','in',['in_invoice','in_refund']),('invoice_type','!=','endors')]}"/>
                  <field name="invoice_ref" attrs="{'invisible':[('invoice_type','!=','commission_inv')],'required':[('invoice_type','=','commission_inv')]}"/>

              </xpath>
          </field>
     </record>


     <record id="action_move_out_invoice_type_commission" model="ir.actions.act_window">
            <field name="name">Commission Invoice</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_out_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('commission_boolean','=',True),('move_type', '=', 'out_invoice')]</field>
            <field name="context">{'default_move_type': 'out_invoice','default_commission_boolean':True}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a customer invoice
              </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
              </p>
            </field>
        </record>

</odoo>