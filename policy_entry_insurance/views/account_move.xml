<odoo>

     <record id="view_account_move" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='payment_reference']" position="after">
                  <field name="policy_id" attrs="{'invisible':[('invoice_type','=','regular_inv')]}"/>
                  <field name="invoice_type" attrs="{'invisible':[('move_type','in',['in_invoice','in_refund'])]}"/>
                  <field name="sales_person"/>
                  <field name="insurance_co_ref"/>
                  <field name="policy_no" attrs="{'invisible':[('move_type','in',['in_invoice','in_refund'])]}"/>
              </xpath>
          </field>
     </record>



</odoo>